<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/txt_sent_name"
            android:background="@drawable/sent_name_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sent name"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_sent_message"
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_sent_name"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="This is sent message"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/sent_messageImage"
            android:layout_below="@+id/txt_sent_message"
            android:background="@drawable/sent_messagerbox_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp" />






    </RelativeLayout>

</RelativeLayout>