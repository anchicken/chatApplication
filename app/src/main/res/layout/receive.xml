<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txt_receive_name"
            android:background="@drawable/sent_name_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="receive name"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/txt_receive_message"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_receive_name"
            android:layout_marginTop="1dp"
            android:text="This is receive message"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/receive_messageImage"
            android:layout_below="@+id/txt_receive_message"
            android:background="@drawable/receive_messagebox_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </RelativeLayout>

</RelativeLayout>